	"dependencies": {
		"derelict-gl3": "~>2.0.0-beta.7",
		"derelict-sdl2": "~>3.1.0-alpha.4"
	},
	"description": "A fancy game engine.",
	"license": "proprietary",
	"name": "fancyengine2",
	"preBuildCommands": ["git rev-parse --short HEAD > src/.commit_hash.txt"],
	"preBuildCommands-windows": ["rc.exe icon.rc > NUL"],
	"stringImportPaths": ["src/"],
	"lflags-windows": ["icon.res", "/LIBPATH:lib/win"],
	"libs": ["gorilla"],
	"libs-windows": ["ole32", "oleaut32", "strmiids", "user32"],



	"buildTypes": {
		"debug": {
			"versions": ["dev"],
			"buildOptions": ["debugInfo", "optimize"]
		},
		"release": {
			"versions": ["release"],
			"buildOptions": ["optimize", "inline"],

			"lflags-windows": ["/subsystem:windows"]
		}
	}
}
